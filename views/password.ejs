<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/assets/bootstrap.css">
    <link rel="stylesheet" href="/assets/style.css" />
  
    <title>Arrow Proxies | Password</title>
    <style>
      body{
        min-height: 100vh;
        display: flex;
        flex-direction: column;
        justify-content: space-between;
      }
    </style>
  </head>
  <body>
    <canvas id="canvas1"> </canvas>
    <div class="postloginnav">
      <div class="navgrid">
      <div class="userdetails">
          <div class="username bold"><%= user.discordUsername %></div>
        <div class="logout" onclick="window.location='/logout'"><img src="/assets/Logout.svg" alt=""></div>
        
      </div>
      <div class="navlinks">
        <a href="/purchase" class="navactive ">Purchase</a>
        <a href="https://dash.arrowproxies.com/store" class="">Store</a>
        <!-- <a href="#" class="bold">Profile</a> -->
        <a href="/" class="">Dashboard</a>
      </div>  
      </div>
      <div class="userimg">
        <img src="<%= user.discordImage %>" alt="">
      </div>
    </div>
    <div class="wrapper" style="">
     
        <div class="loginsection">
          <div class="logintext bold">
            PASSWORD
          </div>
          <div class="smtext">Enter password to access store.</div>
  
           
          <div class="customerdetails" style="margin-bottom: 4rem; width: 95%;">
            <form id="payment-form" action="password" method="POST" class="" style="width: 100%;">
            <div class=" item">
              <label for="address" class="bold">Password</label>
              <input class="form-control"  
              type="password"
              name="password"
              id="pass"
              placeholder="Password" placeholder="Password"  >
            </div>
           
            <button id="sub" class="paybtn bold">
              <div class="spinner hidden" id="spinner"></div>
              <span id="button-text">ENTER</span><span id="order-amount"></span>
            </button>
<!-- <button class="paybtn bold">PAY $77.54</button> -->
            </form>            
          </div>
        </div>
      
    </div>
    <footer>
      <div class="footercontainer">
        <div class="secone">
          <img src="./login/assets//Arrow_PNG.png" alt="" />
          <p class="light">ARROW PROXIES</p>
        </div>

        <div class="sectwo">
          <a href="#"><div class="footerheader">Menu</div></a>
          <a href="#"> <div class="footerlinks">Home</div></a>
          <a href="#"> <div class="footerlinks">Features</div></a>
          <a href="#"> <div class="footerlinks">Purchase</div></a>
          <a href="#"> <div class="footerlinks">FAQ</div></a>
        </div>

        <div class="secthree">
          <a href="#"> <div class="footerheader">Resources</div></a>
          <a href="#"> <div class="footerlinks">Terms of Policy</div></a>
          <a href="#"> <div class="footerlinks">Privacy Policy</div></a>
        </div>

        <div class="secfour">
          <a href="#"> <div class="footerheader">Get In Touch</div></a>
          <a href="#"><div class="footerlinks">arrowproxies@gmail.com</div></a>
        </div>

        <div class="secfive">
          <a href="#"> <img src="./login/assets//Footer twitter.svg" alt="" /></a>
          <a href="#"><img src="./login/assets//Footer instagram.svg" alt="" /></a>
          <a href="#"> <img src="./login/assets//Footer discord.svg" alt="" /></a>
        </div>
    </footer>
    <script src="./login/assets/js/bg.js"></script>
  </body>
  <script>
    document.getElementById("sub").addEventListener("click", (e) => {
      e.preventDefault();
      document.forms[0].submit();
    })
  </script>
</html>
